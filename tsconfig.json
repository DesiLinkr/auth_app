{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./@mf-types/*"],
  "@/*": ["src/*"]

    }
  },
"include": ["src", "src/components", "src/lib","src/utils"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
